<div class="container my-4">
  <%# TODO: Insert background image here maybe? %>
  <h2>Available Pokémons:</h2>

  <div class="row g-3">
    <% @pokemons.each do |pokemon| %>
      <% owner = @users.find(pokemon.user_id) %>
      <div class="col-md-4">
        <div class="card custom-card">
          <div class="card-body d-flex flex-column justify-content-between">
            <div class="img-placeholder text-center">
              <img src="https://e7.pngegg.com/pngimages/476/159/png-clipart-pokemon-pikachu-pikachu-pokemon-games-pokemon.png" alt="Pokemon Name" class="img-fluid">
            </div>
            <div class="info d-flex justify-content-between align-items-center">
              <div>
                <p class="card-text mb-0"><%= pokemon.name %></p>
                <small class="text-muted">Owned by <%= owner.first_name %> <%= owner.last_name %></small>
              </div>
              <span class="price">£<%= pokemon.price_per_day %></span>
            </div>
            <%# TODO: change button to link to show page, also position is off atm %>
            <div class="mt-3 text-center">
              <button class="btn btn-primary">See more details</button>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
