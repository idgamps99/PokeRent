<div class="container my-4">
  <%# TODO: Insert background image here maybe? %>
  <h2>Available Pokémons:</h2>

<div class="container my-4">
    <div class="row g-3">
      <div class="col-md-4">
        <% @pokemons.each do |pokemon| %>
          <% owner = @users.find(pokemon.user_id) %>
          <div class="card custom-card">
            <div class="card-body d-flex flex-column justify-content-between">
              <div class="img-placeholder text-center">IMG</div>
              <div class="info d-flex justify-content-between align-items-center">
                <div>
                  <p class="card-text mb-0"><%= pokemon.name %></p>
                  <small class="text-muted">Owned by <%= owner.first_name %> <%= owner.last_name %></small>
                </div>
                <span class="price">£<%= pokemon.price_per_day %></span>
              </div>
            </div>
          </div>
        <% end %>
      </div>
