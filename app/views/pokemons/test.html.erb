<h1>Select a Date</h1>
<input type="text" class="datepicker" placeholder="Pick a date">

import flatpickr from "flatpickr";
import "flatpickr/dist/flatpickr.min.css";

document.addEventListener('turbolinks:load', function() {
  flatpickr(".datepicker", {
    dateFormat: "Y-m-d",
    minDate: "today",
    allowInput: true
  });
});
