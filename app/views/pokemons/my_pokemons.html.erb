<div class="container my-4">
  <h2>My Pokemons: </h2>
  <div class="content-wrapper">
    <div class="pokemon-grid">
      <% @pokemons.each do |pokemon| %>
        <div class="pokemon-card" style="background-image: url('<%= asset_path "pokemon-card.png" %>'); background-size: cover;">
          <%= link_to pokemon_path(pokemon) do %> <!-- Entire card is a link to the show details page -->
          <div class="card-body">
            <div class="img-placeholder">
              <%= cl_image_tag pokemon.photo.key, height: 300, width: 400, crop: :fill if pokemon.photo.attached? %>
            </div>
            <div class="info">
              <div>
                <p class="name"><%= pokemon.name %></p>
              </div>
                <p> Mana-cost:
                  <% pokemon.price_per_day.to_i.times do %>
                    <img src="<%= asset_path "mana-cost.png" %>" alt="Price Icon" class="price-icon">
                  <% end %>
                </p>
            </div>
          </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
  <%= link_to "Add a new PokÃ©mon to your collection!", new_pokemon_path, class: "btn btn-primary" %>
</div>
