<h1><%= @pokemon.name %></h1>

<img src="https://projectpokemon.org/home/uploads/monthly_2019_06/large.partner-pikachu.png.98d62e1b15ba68afa8658c09a638e92f.png" alt="<%= @pokemon.name %>" style="width: 150px; height: auto;" />

<p><strong>Ability:</strong> <%= @pokemon.ability %></p>
<p><strong>Type:</strong> <%= @pokemon.pokemon_type %></p>
<p><strong>Price per Day:</strong> $<%= @pokemon.price_per_day %></p>

<%= simple_form_for([@pokemon, @booking]) do |form| %>
  <h2>Book this Pokémon</h2>

  <div>
    <%= form.input :booking_start, class: "datepicker", as: :string, placeholder: "Select a start date", input_html: { data: { controller: "datepicker" } } %>
  </div>

  <div>
    <%= form.input :booking_end, class: "datepicker", as: :string, placeholder: "Select an end date", input_html: { data: { controller: "datepicker" } } %>
  </div>

  <%= form.submit "Book Pokémon" %>
<% end %>

