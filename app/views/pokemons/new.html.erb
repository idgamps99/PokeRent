<div class="container-form">
  <%= simple_form_for @pokemon do |f| %>
    <div class="form-group">
      <%= f.input :name, label: "Pokémon Name" %>
      <%= f.input :ability, label: "Pokémon Ability" %>
      <%= f.input :pokemon_type, label: "Pokémon  Type", collection: %w(Normal Fire Water Flying Grass Poison Electric Ground Psychic Rock Ice Bug Dragon Ghost Dark Steel Fairy), prompt: 'Select Type' %>
      <%= f.input :price_per_day  %>
      <div class="img-preview">
        <%= f.input :photo, as: :file, label: "Upload image" %>
        <div class="avatar">
          <%= image_tag(
            @pokemon.photo.attached? ? url_for(@pokemon.photo) : asset_path("logo-pokeball2.png"),
            alt: "Image preview",
            class: "img-thumbnail",
            id: "photo-preview"
          ) %>
        </div>
      </div>
      <%= f.input :address, label: "Address" %>
    </div>
    <div class="form-actions">
      <%= f.button :submit, class: "btn-light-blue" %>
    </div>
  <% end %>
</div>
